{% extends "layout.njk" %}

{% block head %}
    <title>Sobre - {{ about.name }}</title>
{% endblock %}

{% block content %}
<main>
    <div id="wrapper">
        <img src="{{ about.avatar_url }}" alt="Imagem de {{ about.name }}">
        <h1>{{ about.name }}</h1>
        <h2>{{ about.role }}</h2>
        <p>{{ about.description }}</p>
    </div>
</main>

<div id="links-footer" class="links">
    {% for link in about.link %}
    <a href="{{ link.url }}">{{ link.name }}</a>
    {% endfor %}
</div>
{% endblock %}